<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="NamespaceTypo">


    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/buttons_layout"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:padding="12dp">

        <Button
            android:id="@+id/button_settings"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:backgroundTint="#ffff"
            android:drawableTop="@drawable/ic_settings" />

        <TextView
            android:id="@+id/solution_TextView"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="#3d6377"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/result_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="64dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_clear"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="10dp"
                android:backgroundTint="#e2e9ef"
                android:text="C"
                android:textColor="#cb4454"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="("
                android:textColor="#7c5435"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text=")"
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="8dp"
                android:backgroundTint="#e2e9ef"
                android:text="÷"
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_root"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="√"
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="20dp"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="10dp"
                android:backgroundTint="#e2e9ef"
                android:text="7"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="8"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="9"
                android:textAlignment="center"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="8dp"
                android:backgroundTint="#e2e9ef"
                android:text="×"
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cos"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="cos("
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="5sp"
                app:cornerRadius="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="10dp"
                android:backgroundTint="#e2e9ef"
                android:text="4"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="5"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="6"
                android:textAlignment="center"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="8dp"
                android:backgroundTint="#e2e9ef"
                android:text="-"
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sin"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="sin("
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="6sp"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="10dp"
                android:backgroundTint="#e2e9ef"
                android:text="1"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="2"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="3"
                android:textAlignment="center"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="8dp"
                android:backgroundTint="#e2e9ef"
                android:text="+"
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_tg"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="tg("
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="6sp"
                app:cornerRadius="36dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_all_clear"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="10dp"
                android:backgroundTint="#e2e9ef"
                android:text="AC"
                android:textColor="#cb4454"
                android:textSize="7dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="0"
                android:textColor="#3d6377"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="."
                android:textAlignment="center"
                android:textColor="#3d6377"
                android:textSize="25dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_result"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="8dp"
                android:backgroundTint="#c0824f"
                android:text="@string/Result"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ctg"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="12dp"
                android:backgroundTint="#e2e9ef"
                android:text="ctg("
                android:textAlignment="center"
                android:textColor="#7c5435"
                android:textSize="5sp"
                app:cornerRadius="36dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/AdLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/CloseButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:text="X"
            android:background="#00ffffff"/>
    </RelativeLayout>
</RelativeLayout>